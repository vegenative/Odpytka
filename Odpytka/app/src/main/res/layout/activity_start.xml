<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/topic_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_border_bottom_black"
            android:padding="60dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:text="Kogo dzisiaj odpytamy?" />

        <TextView
            android:id="@+id/worker_category_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_border_bottom_black_lightcolor"
            android:padding="80dp"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:text="Pracownik" />

        <TextView
            android:id="@+id/manager_category_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_border_bottom_black_darkcolor"
            android:padding="80dp"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:text="Dyżurny" />

        <Button
            android:id="@+id/exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded_white"
            android:text="Wyjdź z aplikacji" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>