<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/text_view_border_bottom_black"
            android:layout_marginHorizontal="16dp"
            android:padding="6dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_circle_white" />

            <TextView
                android:id="@+id/login_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="16dp"
                android:text="Zalogowany jako"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="16dp"
            android:text="Kogo chcesz dzisiaj odpytać? "
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif-black"
            android:textAlignment="textStart"
            android:textSize="24sp"
            />

        <Button
            android:id="@+id/worker_category_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/button_rounded_white"
            android:padding="16dp"
            android:text="Pracownik"
            android:textSize="24sp" />

        <Button
            android:id="@+id/manager_category_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/button_rounded_white"
            android:padding="16dp"
            android:text="Dyżurny"
            android:textSize="24sp" />

        <Button
            android:id="@+id/questionList_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded_white"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp"
            android:text="Lista odpowiedzi pracowników" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>